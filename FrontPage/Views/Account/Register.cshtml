
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Registro de usuario";
}
<div class="row" id="rootElement">
    <div class="container-fluid h-100 center-block">
        <div class="row justify-content-center align-items-center">
            <div class="col col-sm-6 col-md-6 col-lg-8 col-xl-8">
                <div class="card">
                    <div class="card-header card-header-success">
                        <h4 class="card-title">Registro de usuario</h4>
                        <p class="card-category">Informacion de registro</p>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label class="bmd-label-floating">Nombre de usuario</label>
                                <input type="text" class="form-control" v-model="dataModel.userName">
                            </div>
                            <div class="form-group">
                                <label class="bmd-label-floating">Email</label>
                                <input type="text" class="form-control" v-model="dataModel.email">
                            </div>
                            <div class="form-group">
                                <label class="bmd-label-floating">Password</label>
                                <input type="password" class="form-control" v-model="dataModel.passWord">
                            </div>
                            <button class="btn btn-success pull-right" v-on:click="saveUser">Registrar</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section OwnScript{
    <script src="~/js/user/create.js"></script>
}
